\ProvidesPackage{style}

\RequirePackage{ctex}
\RequirePackage{fancyhdr}
\RequirePackage{geometry}
\RequirePackage{caption}
\RequirePackage{titletoc}
\RequirePackage{fontspec}

\fancyhf{}
% 主要部分的页眉页脚
\fancypagestyle{mainmatter}{
    % \fancyhead[CO]{\zihao{-5}}
    \fancyfoot[CO]{\zihao{-5}-\ \thepage\ -}
    % \fancyhead[CE]{\zihao{-5}}
    \fancyfoot[CE]{\zihao{-5}-\ \thepage\ -}
}

\renewcommand{\headrulewidth}{0pt} % 0.4pt
\renewcommand{\footrulewidth}{0pt}

\geometry{
    a4paper,
    includehead, includefoot,
    left=30mm,right=25mm,top=26mm,bottom=20mm,
    headheight=7mm,footskip=7mm
}

% 图表号使用横线作为分隔符
\captionsetup[figure]{labelformat=simple, labelsep=quad}
\captionsetup[table]{labelformat=simple, labelsep=quad}
\renewcommand {\thetable} {\thechapter{}-\arabic{table}}
\renewcommand {\thefigure} {\thechapter{}-\arabic{figure}}

% 1.5倍行距
\linespread{1.625}

